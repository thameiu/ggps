generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updateddAt DateTime @updatedAt

  username String
  email String
  hash String

  firstName String?
  lastName String?

}

model Event{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updateddAt DateTime @updatedAt

  title String
  description String
  beginDate DateTime
  endDate DateTime
}